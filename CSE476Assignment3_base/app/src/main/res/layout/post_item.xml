<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- UPDATED: Header is now a RelativeLayout to position author and delete button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/postAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="@color/post_primary_text_color"
                android:textStyle="bold"
                tools:text="Author Name" />

            <!-- NEW: Delete Post Button -->
            <ImageButton
                android:id="@+id/btnDeletePost"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete post"
                android:src="@android:drawable/ic_menu_delete"
                android:visibility="gone"
                tools:visibility="visible" />

        </RelativeLayout>


        <!-- Post Location -->
        <TextView
            android:id="@+id/postLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/post_secondary_text_color"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="gone"
            tools:text="Location"/>

        <!-- Post Image -->
        <ImageView
            android:id="@+id/postImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/post_image" />

        <!-- Post Caption -->
        <TextView
            android:id="@+id/postCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="@color/post_primary_text_color" />

        <!-- Hashtags TextView -->
        <TextView
            android:id="@+id/postHashtags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/postLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/post_secondary_text_color"
            android:textStyle="bold" />

        <!-- Container for action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="4dp"
            android:paddingEnd="12dp"
            android:paddingBottom="4dp">

            <ImageButton
                android:id="@+id/btnLikePost"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Like post"
                android:src="@android:drawable/btn_star_big_off" />

            <ImageButton
                android:id="@+id/btnComment"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="View comments"
                android:src="@android:drawable/stat_notify_chat"
                app:tint="@android:color/darker_gray" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>